<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharacterDetailsFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_itemsTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:contentDescription="@string/return_to_previous_view"
            android:id="@+id/ib_return"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:text="@string/character_details"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"
            android:layout_width="0px"
            android:layout_weight="8"
            android:layout_height="match_parent"/>
        <Space
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.handybagofholding.CharacterInfoTile
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.handybagofholding.CharacterNoteInfoTile
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>