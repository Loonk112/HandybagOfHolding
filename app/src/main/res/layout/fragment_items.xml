<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ItemsFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_itemsTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ib_return"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:text="Items"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"
            android:layout_width="0px"
            android:layout_weight="8"
            android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/ib_newItem"
            android:src="@drawable/baseline_add_24"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bn_itemNavigationBar"
        app:menu="@menu/bottom_nav_bar_item_options"
        android:layout_width="match_parent"
        android:minHeight="40sp"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_characters"
        tools:listitem="@layout/item_card_layout"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"/>

</LinearLayout>