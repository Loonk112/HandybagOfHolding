<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/blue">
        <ImageButton
            android:id="@+id/ib_topBarReturn"
            android:enabled="false"
            android:visibility="invisible"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center"
            android:text="TOP TEXT"
            android:id="@+id/tv_topBarMainText"
            android:layout_width="0px"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/b_signOut"
            android:text="Sign out"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="15sp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_primaryDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/ll_topBar"
        app:layout_constraintBottom_toTopOf="@id/bn_primaryNavigationBar"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bn_primaryNavigationBar"
        android:layout_width="match_parent"
        android:minHeight="50sp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>